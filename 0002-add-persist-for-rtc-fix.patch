Subject: add persist for rtc fix

---
 recovery.fstab           | 2 +-
 recovery/root/fstab.elsa | 1 +
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/recovery.fstab b/recovery.fstab
index 4e52fd1..46cb746 100644
--- a/recovery.fstab
+++ b/recovery.fstab
@@ -13,6 +13,6 @@
 #/firmware	vfat	/dev/block/bootdevice/by-name/modem	flags=backup=1;display="Firmware";mounttodecrypt;fsflags=context=u:object_r:firmware_file:s0
 # /modem and /persist are added for flashing OTA files
 /modem		emmc	/dev/block/bootdevice/by-name/modem	flags=display="Modem";flashimg
-/persist	emmc	/dev/block/bootdevice/by-name/persist	flags=display="Persist";flashimg
+/persist	ext4	/dev/block/bootdevice/by-name/persist	flags=display="Persist";flashimg
 /external_sd	vfat	/dev/block/mmcblk0p1 /dev/block/mmcblk0	flags=storage;wipeingui;removable;encryptable=/dev/block/bootdevice/by-name/encrypt
 /usb-otg	vfat	/dev/block/sdh1 /dev/block/sdh		flags=storage;wipeingui;removable
diff --git a/recovery/root/fstab.elsa b/recovery/root/fstab.elsa
index 9c80e2f..8d75cac 100644
--- a/recovery/root/fstab.elsa
+++ b/recovery/root/fstab.elsa
@@ -17,3 +17,4 @@
 /devices/soc/74a4900.sdhci/mmc_host*                           auto   auto   nosuid,nodev                                             wait,encryptable=/dev/block/bootdevice/by-name/encrypt
 /devices/soc/6a00000.ssusb/6a00000.dwc3/xhci-hcd.0.auto/usb*   auto   auto   defaults                                                 defaults
 /devices/soc/6a00000.ssusb/6a00000.dwc3/xhci-hcd.1.auto/usb*   auto   auto   defaults                                                 defaults
+/dev/block/bootdevice/by-name/persist /persist          ext4    nosuid,nodev,barrier=1,noatime,noauto_da_alloc,errors=continue            wait
